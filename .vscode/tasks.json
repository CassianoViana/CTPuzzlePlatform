// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run dev",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "group": "a",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "npm install",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "group": "a",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Tasks",
            "type": "shell",
            "command": "${input:terminateAllTasks}",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "terminateAllTasks",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}
