{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ],
            "monaco": [
                "~/"
            ],
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/auth-next"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}